@{
    ViewData["Title"] = "Access Denied";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-danger">
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="fas fa-exclamation-triangle text-danger" style="font-size: 4rem;"></i>
                    </div>
                    <h2 class="card-title text-danger">Access Denied</h2>
                    <p class="card-text text-muted">
                        Sorry, you don't have permission to access this resource. 
                        Please contact your system administrator if you believe this is an error.
                    </p>
                    <div class="mt-4">
                        <a href="@Url.Action("Index", "Dashboard")" class="btn btn-primary me-2">
                            <i class="fas fa-home me-2"></i>Go to Dashboard
                        </a>
                        <a href="@Url.Action("SignOut", "Account")" class="btn btn-outline-secondary">
                            <i class="fas fa-sign-out-alt me-2"></i>Sign Out
                        </a>
                    </div>
                    <div class="mt-3">
                        <small class="text-muted">
                            If you need access to this feature, please contact your IT department.
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Log access denied event
        console.log('Access denied for user at: ' + new Date().toISOString());
    </script>
}
