@model dynamic
@{
    ViewData["Title"] = "User Profile";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-user me-2"></i>User Profile
                    </h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Full Name</label>
                                <p class="form-control-plaintext">@($"{Model.User.FirstName} {Model.User.LastName}")</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Email Address</label>
                                <p class="form-control-plaintext">@Model.User.Email</p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Department</label>
                                <p class="form-control-plaintext">@(Model.User.Department ?? "Not specified")</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Job Title</label>
                                <p class="form-control-plaintext">@(Model.User.Title ?? "Not specified")</p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Account Created</label>
                                <p class="form-control-plaintext">@Model.User.CreatedAt.ToString("MMM dd, yyyy")</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Last Login</label>
                                <p class="form-control-plaintext">
                                    @(Model.User.LastLoginAt?.ToString("MMM dd, yyyy HH:mm") ?? "Never")
                                </p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Account Status</label>
                                <p class="form-control-plaintext">
                                    @if (Model.User.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Inactive</span>
                                    }
                                </p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Email Confirmed</label>
                                <p class="form-control-plaintext">
                                    @if (Model.User.EmailConfirmed)
                                    {
                                        <span class="badge bg-success">Confirmed</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">Pending</span>
                                    }
                                </p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">User Roles</label>
                                <p class="form-control-plaintext">
                                    @if (Model.Roles.Any())
                                    {
                                        foreach (var role in Model.Roles)
                                        {
                                            <span class="badge bg-primary me-1">@role</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">No roles assigned</span>
                                    }
                                </p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Authentication Method</label>
                                <p class="form-control-plaintext">
                                    <span class="badge bg-info">Azure AD</span>
                                </p>
                            </div>
                        </div>
                    </div>
                    
                    <hr />
                    
                    <!-- Azure AD Claims (for debugging) -->
                    <div class="row">
                        <div class="col-12">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Azure AD Claims</label>
                                <div class="card">
                                    <div class="card-body">
                                        <div class="row">
                                            @foreach (var claim in Model.Claims)
                                            {
                                                <div class="col-md-6 mb-2">
                                                    <small class="text-muted">@claim.Type</small>
                                                    <div class="text-break">@claim.Value</div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <hr />
                    
                    <div class="d-flex justify-content-between">
                        <a href="@Url.Action("Index", "Dashboard")" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
                        </a>
                        <div>
                            <a href="@Url.Action("EditProfile", "Account")" class="btn btn-primary me-2">
                                <i class="fas fa-edit me-2"></i>Edit Profile
                            </a>
                            <a href="@Url.Action("SignOut", "Account")" class="btn btn-outline-danger">
                                <i class="fas fa-sign-out-alt me-2"></i>Sign Out
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
