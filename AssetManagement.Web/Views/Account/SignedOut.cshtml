@{
    ViewData["Title"] = "Signed Out";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header text-center py-5">
                    <img src="~/images/NYC_OATH-logo.png" alt="NYC OATH" class="mb-4" style="height: 200px; width: auto;" />
                    <h4 class="mb-0">Signed Out</h4>
                </div>
                <div class="card-body text-center">
                    <i class="bi bi-check-circle text-success" style="font-size: 3rem;"></i>
                    <h5 class="mt-3">You have been successfully signed out</h5>
                    <p class="text-muted">Thank you for using the Asset Management System.</p>
                    <a href="@Url.Action("SignIn", "Account")" class="btn btn-primary">
                        <i class="bi bi-box-arrow-in-right"></i> Sign In Again
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
