@model AssetManagement.Domain.Entities.Asset

@{
    ViewData["Title"] = "Asset Details";
}

<div class="row mb-4">
    <div class="col-md-6">
        <h1 class="display-6">
            <i class="bi bi-pc-display text-primary"></i> Asset Details
        </h1>
    </div>
    <div class="col-md-6 text-end">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Assets
        </a>
        @if (User.IsInRole("Admin") || User.IsInRole("IT") || User.IsInRole("Procurement"))
        {
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                <i class="bi bi-pencil"></i> Edit
            </a>
        }
        @if (User.IsInRole("Admin") || User.IsInRole("IT"))
        {
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                <i class="bi bi-trash"></i> Delete
            </a>
        }
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-info-circle text-primary"></i> Asset Information
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h6 class="text-muted">Basic Information</h6>
                        <dl class="row">
                            <dt class="col-sm-4">Asset Tag</dt>
                            <dd class="col-sm-8"><strong>@Model.AssetTag</strong></dd>

                            <dt class="col-sm-4">Serial Number</dt>
                            <dd class="col-sm-8">@Model.SerialNumber</dd>

                            <dt class="col-sm-4">Service Tag</dt>
                            <dd class="col-sm-8">@Model.ServiceTag</dd>

                            <dt class="col-sm-4">Manufacturer</dt>
                            <dd class="col-sm-8">@Model.Manufacturer</dd>

                            <dt class="col-sm-4">Model</dt>
                            <dd class="col-sm-8">@Model.Model</dd>

                            <dt class="col-sm-4">Category</dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-secondary">@Model.Category</span>
                            </dd>

                            <dt class="col-sm-4">Status</dt>
                            <dd class="col-sm-8">
                                @{
                                    var statusClass = Model.Status?.ToLower() switch
                                    {
                                        "active" => "bg-success",
                                        "inactive" => "bg-secondary",
                                        "maintenance" => "bg-warning",
                                        "retired" => "bg-danger",
                                        _ => "bg-info"
                                    };
                                }
                                <span class="badge @statusClass">@Model.Status</span>
                            </dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <h6 class="text-muted">Assignment & Location</h6>
                        <dl class="row">
                            <dt class="col-sm-4">Assigned User</dt>
                            <dd class="col-sm-8">@Model.AssignedUserName</dd>

                            <dt class="col-sm-4">User Email</dt>
                            <dd class="col-sm-8">@Model.AssignedUserEmail</dd>

                            <dt class="col-sm-4">Manager</dt>
                            <dd class="col-sm-8">@Model.Manager</dd>

                            <dt class="col-sm-4">Department</dt>
                            <dd class="col-sm-8">@Model.Department</dd>

                            <dt class="col-sm-4">Unit</dt>
                            <dd class="col-sm-8">@Model.Unit</dd>

                            <dt class="col-sm-4">Location</dt>
                            <dd class="col-sm-8">@Model.Location</dd>

                            <dt class="col-sm-4">Floor</dt>
                            <dd class="col-sm-8">@Model.Floor</dd>

                            <dt class="col-sm-4">Desk</dt>
                            <dd class="col-sm-8">@Model.Desk</dd>
                        </dl>
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col-md-6">
                        <h6 class="text-muted">Technical Details</h6>
                        <dl class="row">
                            <dt class="col-sm-4">Network Name</dt>
                            <dd class="col-sm-8">@Model.NetName</dd>

                            <dt class="col-sm-4">IP Address</dt>
                            <dd class="col-sm-8">@Model.IpAddress</dd>

                            <dt class="col-sm-4">MAC Address</dt>
                            <dd class="col-sm-8">@Model.MacAddress</dd>

                            <dt class="col-sm-4">Wall Port</dt>
                            <dd class="col-sm-8">@Model.WallPort</dd>

                            <dt class="col-sm-4">Switch Name</dt>
                            <dd class="col-sm-8">@Model.SwitchName</dd>

                            <dt class="col-sm-4">Switch Port</dt>
                            <dd class="col-sm-8">@Model.SwitchPort</dd>

                            <dt class="col-sm-4">OS Version</dt>
                            <dd class="col-sm-8">@Model.OsVersion</dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <h6 class="text-muted">Purchase Information</h6>
                        <dl class="row">
                            <dt class="col-sm-4">Purchase Price</dt>
                            <dd class="col-sm-8">@(Model.PurchasePrice?.ToString("C") ?? "N/A")</dd>

                            <dt class="col-sm-4">Order Number</dt>
                            <dd class="col-sm-8">@Model.OrderNumber</dd>

                            <dt class="col-sm-4">Vendor</dt>
                            <dd class="col-sm-8">@Model.Vendor</dd>

                            <dt class="col-sm-4">Vendor Invoice</dt>
                            <dd class="col-sm-8">@Model.VendorInvoice</dd>

                            <dt class="col-sm-4">Purchase Date</dt>
                            <dd class="col-sm-8">@(Model.PurchaseDate?.ToString("MM/dd/yyyy") ?? "N/A")</dd>

                            <dt class="col-sm-4">Warranty Start</dt>
                            <dd class="col-sm-8">@(Model.WarrantyStart?.ToString("MM/dd/yyyy") ?? "N/A")</dd>

                            <dt class="col-sm-4">Warranty End</dt>
                            <dd class="col-sm-8">@(Model.WarrantyEndDate?.ToString("MM/dd/yyyy") ?? "N/A")</dd>
                        </dl>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.Notes))
                {
                    <div class="row mt-4">
                        <div class="col-12">
                            <h6 class="text-muted">Notes</h6>
                            <p class="text-muted">@Model.Notes</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-clock-history text-primary"></i> Audit Information
                </h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Created</dt>
                    <dd class="col-sm-8">@Model.CreatedAt.ToString("MM/dd/yyyy HH:mm")</dd>

                    <dt class="col-sm-4">Created By</dt>
                    <dd class="col-sm-8">@Model.CreatedBy</dd>

                    @if (Model.UpdatedAt.HasValue)
                    {
                        <dt class="col-sm-4">Updated</dt>
                        <dd class="col-sm-8">@Model.UpdatedAt.Value.ToString("MM/dd/yyyy HH:mm")</dd>

                        <dt class="col-sm-4">Updated By</dt>
                        <dd class="col-sm-8">@Model.UpdatedBy</dd>
                    }
                </dl>
            </div>
        </div>
    </div>
</div>
