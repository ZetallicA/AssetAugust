@model AssetManagement.Domain.Entities.Asset

@{
    ViewData["Title"] = "Delete Asset";
}

<div class="row mb-4">
    <div class="col-md-6">
        <h1 class="display-6">
            <i class="bi bi-trash text-danger"></i> Delete Asset
        </h1>
    </div>
    <div class="col-md-6 text-end">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Assets
        </a>
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">
            <i class="bi bi-eye"></i> View Details
        </a>
    </div>
</div>

<div class="card shadow border-danger">
    <div class="card-header bg-danger text-white">
        <h5 class="card-title mb-0">
            <i class="bi bi-exclamation-triangle"></i> Confirm Deletion
        </h5>
    </div>
    <div class="card-body">
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle"></i>
            <strong>Warning:</strong> Are you sure you want to delete this asset? This action cannot be undone.
        </div>

        <div class="row">
            <div class="col-md-6">
                <h6 class="text-muted">Asset Information</h6>
                <dl class="row">
                    <dt class="col-sm-4">Asset Tag</dt>
                    <dd class="col-sm-8"><strong>@Model.AssetTag</strong></dd>

                    <dt class="col-sm-4">Serial Number</dt>
                    <dd class="col-sm-8">@Model.SerialNumber</dd>

                    <dt class="col-sm-4">Manufacturer</dt>
                    <dd class="col-sm-8">@Model.Manufacturer</dd>

                    <dt class="col-sm-4">Model</dt>
                    <dd class="col-sm-8">@Model.Model</dd>

                    <dt class="col-sm-4">Category</dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-secondary">@Model.Category</span>
                    </dd>

                    <dt class="col-sm-4">Status</dt>
                    <dd class="col-sm-8">
                        @{
                            var statusClass = Model.Status?.ToLower() switch
                            {
                                "active" => "bg-success",
                                "inactive" => "bg-secondary",
                                "maintenance" => "bg-warning",
                                "retired" => "bg-danger",
                                _ => "bg-info"
                            };
                        }
                        <span class="badge @statusClass">@Model.Status</span>
                    </dd>
                </dl>
            </div>
            <div class="col-md-6">
                <h6 class="text-muted">Assignment & Location</h6>
                <dl class="row">
                    <dt class="col-sm-4">Assigned User</dt>
                    <dd class="col-sm-8">@Model.AssignedUserName</dd>

                    <dt class="col-sm-4">Department</dt>
                    <dd class="col-sm-8">@Model.Department</dd>

                    <dt class="col-sm-4">Location</dt>
                    <dd class="col-sm-8">@Model.Location</dd>

                    <dt class="col-sm-4">Floor</dt>
                    <dd class="col-sm-8">@Model.Floor</dd>

                    <dt class="col-sm-4">Desk</dt>
                    <dd class="col-sm-8">@Model.Desk</dd>

                    <dt class="col-sm-4">Created</dt>
                    <dd class="col-sm-8">@Model.CreatedAt.ToString("MM/dd/yyyy")</dd>
                </dl>
            </div>
        </div>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            
            <div class="d-flex gap-2 mt-4">
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Delete Asset
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>
