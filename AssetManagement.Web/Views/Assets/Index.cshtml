        },
        security: {
            name: 'Security',
            columns: ['assetTag', 'serialNumber', 'manufacturer', 'model', 'category', 'assignedUser', 'assignedUserEmail', 'department', 'location', 'floor', 'desk', 'status', 'phoneNumber', 'extension', 'imei', 'cardNumber', 'notes', 'actions']
        },
        clerical: {
