            columns: ['assetTag', 'serialNumber', 'manufacturer', 'model', 'category', 'assignedUser', 'assignedUserEmail', 'manager', 'department', 'unit', 'location', 'status', 'purchaseDate', 'warrantyEnd', 'notes', 'actions']
