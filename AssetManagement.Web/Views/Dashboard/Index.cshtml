@{
    ViewData["Title"] = "Dashboard";
}

<div class="row mb-4">
    <div class="col-12">
        <h1 class="display-6">
            <i class="bi bi-speedometer2 text-primary"></i> Asset Management Dashboard
        </h1>
        <p class="lead">Welcome to your asset management system. Here's an overview of your assets and recent activity.</p>
    </div>
</div>

<!-- Quick Actions -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card shadow">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">
                    <i class="bi bi-lightning"></i> Quick Actions
                </h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <a asp-controller="Assets" asp-action="Create" class="btn btn-primary btn-block">
                            <i class="bi bi-plus-circle"></i> Add Asset
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a asp-controller="Assets" asp-action="Import" class="btn btn-success btn-block">
                            <i class="bi bi-upload"></i> Import Assets
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a asp-controller="Assets" asp-action="Index" class="btn btn-info btn-block">
                            <i class="bi bi-list"></i> View All Assets
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a asp-controller="Dashboard" asp-action="Reports" class="btn btn-warning btn-block">
                            <i class="bi bi-graph-up"></i> Reports
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Welcome Message -->
<div class="row">
    <div class="col-12">
        <div class="card shadow">
            <div class="card-body text-center py-5">
                <i class="bi bi-building-gear fa-3x text-primary mb-3"></i>
                <h4>Asset Management System</h4>
                <p class="text-muted">
                    Your comprehensive solution for managing IT and Facilities equipment.
                </p>
                <div class="mt-4">
                    <a asp-controller="Assets" asp-action="Index" class="btn btn-primary me-2">
                        <i class="bi bi-list"></i> View Assets
                    </a>
                    <a href="/hangfire" target="_blank" class="btn btn-secondary">
                        <i class="bi bi-gear"></i> Background Jobs
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
