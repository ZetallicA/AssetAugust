@model IEnumerable<AssetManagement.Domain.Entities.Building>

@{
    ViewData["Title"] = "Buildings & Floors";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="bi bi-building text-primary"></i> Buildings & Floors
                    </h3>
                </div>
                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        <div class="row">
                            @foreach (var building in Model)
                            {
                                <div class="col-md-6 col-lg-4 mb-4">
                                    <div class="card h-100">
                                        <div class="card-header">
                                            <h5 class="card-title mb-0">
                                                <i class="bi bi-building"></i> @building.Name
                                            </h5>
                                        </div>
                                        <div class="card-body">
                                            <p class="card-text">
                                                <strong>Code:</strong> @building.BuildingCode<br>
                                                <strong>Address:</strong> @building.Address<br>
                                                <strong>City:</strong> @building.City, @building.State @building.ZipCode
                                            </p>
                                            
                                            @if (building.Floors != null && building.Floors.Any())
                                            {
                                                <h6 class="mt-3">Floors:</h6>
                                                <div class="list-group list-group-flush">
                                                    @foreach (var floor in building.Floors.OrderBy(f => f.FloorNumber))
                                                    {
                                                        <div class="list-group-item d-flex justify-content-between align-items-center">
                                                            <div>
                                                                <strong>Floor @floor.FloorNumber</strong><br>
                                                                <small class="text-muted">@floor.Name</small>
                                                            </div>
                                                            <span class="badge bg-primary rounded-pill">
                                                                <i class="bi bi-layers"></i>
                                                            </span>
                                                        </div>
                                                    }
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="alert alert-info">
                                                    <i class="bi bi-info-circle"></i> No floors configured
                                                </div>
                                            }
                                        </div>
                                        <div class="card-footer">
                                            <div class="btn-group w-100" role="group">
                                                <button type="button" class="btn btn-outline-primary btn-sm">
                                                    <i class="bi bi-eye"></i> View Details
                                                </button>
                                                <button type="button" class="btn btn-outline-secondary btn-sm">
                                                    <i class="bi bi-gear"></i> Manage
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-building display-1 text-muted"></i>
                            <h4 class="mt-3">No Buildings Found</h4>
                            <p class="text-muted">No buildings have been configured yet.</p>
                            <button class="btn btn-primary">
                                <i class="bi bi-plus-circle"></i> Add Building
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
