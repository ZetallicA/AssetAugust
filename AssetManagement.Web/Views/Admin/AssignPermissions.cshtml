@model AssetManagement.Web.Controllers.AssignPermissionsViewModel
@{
    ViewData["Title"] = "Assign Permissions";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="h3 mb-0">
                        <i class="bi bi-shield-lock text-primary me-2"></i>
                        Assign Permissions
                    </h1>
                    <p class="text-muted">Assign permissions to @Model.User.FirstName @Model.User.LastName</p>
                </div>
                <div>
                    <a href="@Url.Action("UserManagement", "Admin")" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-2"></i>Back to User Management
                    </a>
                </div>
            </div>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle me-2"></i>
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- User Info Card -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-person me-2"></i>User Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-3">
                                <div class="avatar-lg bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3">
                                    @(Model.User.FirstName?.FirstOrDefault().ToString().ToUpper() ?? "U")
                                </div>
                                <div>
                                    <h5 class="mb-1">@Model.User.FirstName @Model.User.LastName</h5>
                                    <p class="text-muted mb-0">@Model.User.Email</p>
                                    <small class="text-muted">@Model.User.Title</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="row">
                                <div class="col-6">
                                    <label class="form-label text-muted">Department</label>
                                    <p class="mb-0">@(Model.User.Department ?? "Not specified")</p>
                                </div>
                                <div class="col-6">
                                    <label class="form-label text-muted">Status</label>
                                    <p class="mb-0">
                                        @if (Model.User.IsActive)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Inactive</span>
                                        }
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Permission Assignment Form -->
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-shield-check me-2"></i>Permission Assignment
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="AssignPermissions" method="post">
                        <input type="hidden" name="userId" value="@Model.User.Id" />
                        
                        <div class="row">
                            <div class="col-md-8">
                                <h6 class="mb-3">Available Permissions</h6>
                                <div class="table-responsive">
                                    <table class="table table-sm">
                                        <thead>
                                            <tr>
                                                <th>Permission</th>
                                                <th>Description</th>
                                                <th>Scope</th>
                                                <th>Assign</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @for (int i = 0; i < Model.AvailablePermissions.Count; i++)
                                            {
                                                var permission = Model.AvailablePermissions[i];
                                                var isAssigned = Model.CurrentPermissions.Contains(permission.Name);
                                                
                                                                                                 <tr>
                                                     <td>
                                                         <strong>@permission.Name</strong>
                                                         <br><small class="text-muted">@permission.Code</small>
                                                     </td>
                                                     <td>@permission.Code</td>
                                                    <td>
                                                        <select class="form-select form-select-sm" name="assignments[@i].ScopeType">
                                                            <option value="Global">Global</option>
                                                            @foreach (var building in Model.Buildings)
                                                            {
                                                                <option value="Building" data-building-id="@building.Id">@building.Name</option>
                                                            }
                                                        </select>
                                                    </td>
                                                    <td>
                                                        <div class="form-check">
                                                            <input class="form-check-input" type="checkbox" 
                                                                   name="assignments[@i].IsSelected" value="true"
                                                                   id="perm_@permission.Id"
                                                                   @(isAssigned ? "checked" : "") />
                                                            <input type="hidden" name="assignments[@i].PermissionId" value="@permission.Id" />
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <h6 class="mb-3">Current Permissions</h6>
                                @if (Model.CurrentPermissions.Any())
                                {
                                    foreach (var permission in Model.CurrentPermissions)
                                    {
                                        <span class="badge bg-info me-2 mb-2">@permission</span>
                                    }
                                }
                                else
                                {
                                    <p class="text-muted">No permissions assigned</p>
                                }
                                
                                <hr />
                                
                                <div class="alert alert-info">
                                    <h6><i class="bi bi-info-circle me-2"></i>Permission Scopes</h6>
                                    <ul class="mb-0 small">
                                        <li><strong>Global:</strong> Access to all resources</li>
                                        <li><strong>Building:</strong> Access limited to specific building</li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <hr />

                        <div class="d-flex justify-content-end">
                            <a href="@Url.Action("UserManagement", "Admin")" class="btn btn-outline-secondary me-2">
                                Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save me-2"></i>Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.avatar-lg {
    width: 64px;
    height: 64px;
    font-size: 24px;
    font-weight: bold;
}

.form-check-input:checked {
    background-color: #0d6efd;
    border-color: #0d6efd;
}

.table-sm td, .table-sm th {
    padding: 0.5rem;
    vertical-align: middle;
}
</style>
